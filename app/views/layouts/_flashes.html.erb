<% flash.each do |key, value| %>
	<div class="col mt-1">
	  <div class="alert alert-<%= bootstrap_alert(key) %> alert-dismissible fade show">
	    <span><%= value %></span>
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	      <span aria-hidden="true">&times;</span>
	    </button>
	  </div>
	</div>
<% end %>