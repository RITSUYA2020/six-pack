<% if work_out.favorited_by?(current_user) %>
<!-- ログインしているユーザーがファボしたかどうかで分岐 -->
	<%=link_to work_out_favorites_path(work_out.id), method: :delete, remote: true do %>
		<i class="fas fa-heart"></i>
		<%= work_out.favorites.count %>
	<% end %>
<% else %>
	<%=link_to work_out_favorites_path(work_out.id), method: :post, remote: true do %>
		<i class="fas fa-heart"></i>
		<%= work_out.favorites.count %>
	<% end %>
<% end %>