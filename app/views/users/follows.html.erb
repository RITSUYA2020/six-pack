<div class="wrap">
	<div class="container-fluid">
		<div class= "row ml-1">
			<h1><%= @user.name %>'s Follow</h1>
		</div>
		<div class= "row justify-content-center my-3">
			<div class="col-6">
				<table class="table">
					<thread>
						<tr>
							<th colspan="2">Name</th>
							<th></th>
							<th></th>
						</tr>
					</thread>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td>
									<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no-image.jpg", class: "rounded-circle" %>
								</td>
								<td>
									<%= user.name %>
								</td>
								<td>
									<% if user != current_user %>
										<% if user.followed_by?(current_user) %>
											<%=link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-outline-warning btn-sm" %>
										<% else %>
											<%=link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-outline-primary btn-sm" %>
										<% end %>
									<% end %>
								</td>
								<td>
									<%= link_to "Go Work Out", user_path(user), class: "btn btn-outline-dark btn-sm" %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>