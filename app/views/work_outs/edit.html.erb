<h1>WorkOuts#edit</h1>

<p><%= flash[:error] %></p>

<%= form_for(@work_out) do |f| %>

	<div class="field">
		*<%= f.label :time, "時間" %>
		<%= f.text_field :time, autocomplete: "time", placeholder: "(例)15", class: "time" %>分
	</div>

	<div class="field">
		*<%= f.label :muscle_group, "筋群" %>
		<%= f.select :muscle_group, WorkOut.muscle_groups.keys.map {|k| [I18n.t("enums.work_out.muscle_group.#{k}"), k]}, class: "muscle_group" %>
	</div>

	<div class="field">
		<%= f.label :equipment, "器具" %>
		<%= f.text_field :equipment, autocomplete: "equipment", placeholder: "器具を使用した場合は器具の名前を記入してください。", class: "equipment" %>
	</div>

	<div class="field">
		<%= f.label :body, "内容" %>
		<%= f.text_area :body,  autocomplete: "off", placeholder: "具体的な内容を記入してください。",class: "body" %>
	</div>

	<div class="field">
		*<%= f.label :effect, "効果" %>
		<%= f.select :effect, WorkOut.effects.keys.map {|k| [I18n.t("enums.work_out.effect.#{k}"), k]}, class: "effect" %>
	</div>

	<div class="field">
		*<%= f.label :place, "場所" %>
		<%= f.select :place, WorkOut.places.keys.map {|k| [I18n.t("enums.work_out.place.#{k}"), k]}, class: "place" %>
	</div>

	<div class="field">
		<%= f.label :before_image, "ビフォー画像" %>
		<%= f.attachment_field :before_image, class: "before_image" %>
	</div>

	<div class="field">
		<%= f.label :after_image, "アフター画像" %>
		<%= f.attachment_field :after_image, class: "after_image" %>
	</div>

	<div class="actions">
   		<%= f.submit "登録" %>
  </div>
<% end %>